# 监控系统环境变量示例文件
# 复制此文件为 .env 并根据实际情况修改

# 配置文件路径
CONFIG_FILE=config.yaml

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=dbname
DATABASE_URL="postgresql://postgres:passwrod@localhost:5432/dbname"

# 邮件通知配置
EMAIL_ENABLED=false
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
EMAIL_SENDER=your_email@example.com
EMAIL_RECIPIENTS=admin@example.com,alerts@example.com

# Telegram通知配置（作为备用）
TELEGRAM_ENABLED=true
TELEGRAM_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_IDS=your_chat_ids

# 服务检查配置
SERVICE_CHECKS_ENABLED=true
SERVICE_CHECK_INTERVAL=5

# 系统监控配置
SYSTEM_MONITORING_ENABLED=true
SYSTEM_MONITORING_INTERVAL=5
CPU_THRESHOLD=80
MEMORY_THRESHOLD=80
DISK_THRESHOLD=80 